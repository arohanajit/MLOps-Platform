# MLOps Platform - Local Development Environment Variables

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mlops
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
SCHEMA_REGISTRY_URL=http://localhost:8081

# MinIO (S3 compatible storage)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
S3_BUCKET_NAME=mlops-data

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=mlops-experiment

# Feature Store
FEATURE_STORE_URL=http://localhost:8001
FEATURE_REGISTRY_URL=http://localhost:8000

# Model Registry
MODEL_REGISTRY_URL=http://localhost:5000
MODEL_SERVING_URL=http://localhost:8002

# Logging
LOG_LEVEL=DEBUG

# Development Mode
DEV_MODE=true

# GitHub Access (for CI/CD configuration)
# GITHUB_TOKEN=your_github_token
# GITHUB_USERNAME=your_github_username

# Docker Hub Access (for CI/CD configuration)
# DOCKER_HUB_USERNAME=your_dockerhub_username
# DOCKER_HUB_PASSWORD=your_dockerhub_password

# Kubernetes Configuration
# KUBECONFIG=/path/to/your/kubeconfig
KUBE_NAMESPACE=mlops

# AWS Configuration (if using AWS services)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-west-2
# AWS_ACCOUNT_ID=your_aws_account_id

# Development Flags
MOCK_SERVICES=true       # Use mock implementations for dependent services
SKIP_AUTHENTICATION=true # Skip authentication for local development 