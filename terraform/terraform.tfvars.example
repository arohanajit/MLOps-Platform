# Example Terraform Variables for MLOps Platform
# Copy this file to terraform.tfvars and customize as needed

# AWS region where resources will be created
aws_region = "us-west-2"

# Environment name (dev, staging, prod)
environment = "dev"

# Kubernetes cluster name
cluster_name = "mlops-platform"

# Domain name for the platform
domain_name = "mlops.example.com"

# Database instance class
db_instance_class = "db.t3.medium"

# Elasticsearch instance type
elasticsearch_instance_type = "t3.medium.elasticsearch"

# Redis node type
redis_node_type = "cache.t3.medium"

# Kafka instance type
kafka_instance_type = "kafka.m5.large" 